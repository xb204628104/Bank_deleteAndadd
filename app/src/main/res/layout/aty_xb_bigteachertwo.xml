<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical"
        android:background="@mipmap/bigbackground">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imteacher_xb_meassage"
                android:src="@mipmap/message"/>
            <ImageView
                android:layout_marginTop="4dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="15dp"
                android:id="@+id/imteacher_xb_shape"
                android:src="@mipmap/shape"/>
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_gravity="center_vertical"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/lihongyi"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="18dp"

                    android:layout_gravity="clip_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="李宏毅"
                    android:textColor="#ffffff"
                    android:textSize="17sp"/>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/shape_xb_fengshui"
                        android:layout_width="70dp"
                        android:layout_height="22dp"
                        android:text="房屋风水"
                        android:textSize="12sp"
                        android:textColor="#b1ffffff"/>
                    <Button
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/shape_xb_fengshui"
                        android:layout_width="70dp"
                        android:layout_height="22dp"
                        android:text="观星望斗"
                        android:textSize="12sp"
                        android:textColor="#bbffffff"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_width="18dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/renzheng"/>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="官方认证"

                        android:layout_marginLeft="5dp"
                        android:textColor="#ffffff"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_width="18dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/xiehui"
                        />
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="玄学协会"
                        android:layout_marginLeft="5dp"
                        android:textColor="#ffffff"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView

                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:layout_width="15dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/pingfen"/>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.99分"
                        android:layout_marginLeft="5dp"
                        android:textColor="#b4ffffff"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_width="15dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/dingdan"/>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="983单"
                        android:layout_marginLeft="5dp"
                        android:textColor="#b4ffffff"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#b3858585"
            android:orientation="horizontal">
            <LinearLayout
               android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5639.00"
                    android:textSize="15sp"
                    android:textColor="#f13030"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今日收益"
                    android:textColor="#ffffff"/>

            </LinearLayout>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="#ffffff" />
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textSize="15sp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="88"
                    android:textColor="#f13030"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今日订单"
                    android:textColor="#ffffff"/>

            </LinearLayout>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="#ffffff" />
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textSize="15sp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2236.00"
                    android:textColor="#f13030"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="余额"
                    android:textColor="#ffffff"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#ffffff">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22"
                    android:textSize="15sp"
                    android:textColor="#f13030"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新订单"
                    android:textSize="13sp"
                    android:textColor="#7d000000"/>

            </LinearLayout>
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="#20000000" />
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textSize="15sp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22"
                    android:textColor="#f13030"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未完成订单"
                    android:textSize="13sp"
                    android:textColor="#7d000000"/>

            </LinearLayout>
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="#20000000" />
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textSize="15sp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22"
                    android:textColor="#f13030"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="悬赏"
                    android:textSize="13sp"
                    android:textColor="#7d000000"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/xiehuirenzheng"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="协会管理"
                    android:textSize="12sp"
                    android:textColor="#7d000000"/>
            </LinearLayout>
            <View

                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#20000000" />

            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/dashirenzheng"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大师认证"
                    android:textSize="12sp"
                    android:textColor="#7d000000"/>
            </LinearLayout>



            <View

                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#20000000" />

            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/gerenziliao"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人资料"
                    android:textSize="12sp"
                    android:textColor="#7d000000"/>
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7d000000"></View>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/fuwuguanli"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务管理"
                    android:textSize="12sp"
                    android:textColor="#7d000000"/>
            </LinearLayout>
            <View

                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#20000000" />

            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/shangpinguanli"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品管理"
                    android:textSize="12sp"
                    android:textColor="#7d000000"/>
            </LinearLayout>
            <View

                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#20000000" />

            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/dingdanguanli"
                   />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单管理"
                    android:textSize="12sp"
                    android:textColor="#7d000000"/>
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7d000000"></View>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/fabuwenzhang"
                   />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布文章"
                    android:textSize="12sp"
                    android:textColor="#7d000000"/>
            </LinearLayout>
            <View

                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#20000000" />

            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/shouyimingxi"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收益明细"
                    android:textSize="12sp"
                    android:textColor="#7d000000"/>
            </LinearLayout>
            <View

                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#20000000" />

            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/shezhi"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置"
                    android:textSize="12sp"
                    android:textColor="#7d000000"/>
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7d000000"></View>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/suiyuanhongbao"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="随缘红包"
                    android:textSize="12sp"
                    android:textColor="#7d000000"/>
            </LinearLayout>
            <View

                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#20000000" />

            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>
            <View

                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#20000000" />

            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>